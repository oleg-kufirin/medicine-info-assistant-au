## Environment configuration (example)
# Copy this file to `.env` and fill in your own keys.

# API keys
GROQ_API_KEY=
LANGCHAIN_API_KEY=

# Model overrides
EMBED_MODEL=all-mpnet-base-v2
SAFETY_MODEL=llama-3.1-8b-instant
SUMMARY_MODEL=llama-3.1-8b-instant
REFLECTION_MODEL=llama-3.1-8b-instant
DETECTION_MODEL=llama-3.1-8b-instant

# Retrieval/summarisation limits
MAX_PASSAGE_CHARS=-1                # unlimited per passage in retrieval
SUMMARY_PASSAGE_SNIPPET_LIMIT=2000  # characters per passage in prompt context
SUMMARY_MAX_CONTEXT_CHARS=20000     # total characters across all passages

# LangChain/LangSmith configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_PROJECT=

